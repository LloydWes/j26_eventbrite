<% if resource.errors.any? %>

<div class="col-xs-10 col-xs-offset-1">
<div class="alert alert-danger">
        <a href="#" class="close" data-dismiss="alert">&#215;</a>
  <h2>
    Error :
   </h2>
   <ul>
    <% resource.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
</div>
<% end %>


